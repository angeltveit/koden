style.
  body {
    margin: 0;
    padding: 0;
  }
  .cover {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    background-image: url(public/question.jpg);
    background-size: cover;
    background-position: center;
    color: #fff;
    height: 100vh;
    width: 100vw;
    filter: drop-shadow(1px 1px 0px rgba(0, 0, 0, .7));
    box-sizing: border-box;
  }
  .explain {
    filter: drop-shadow(2px 2px 0px rgba(0, 0, 0, .7));
    font-size: 2em;
    text-align: center;
  }
  a {
    background-color: yellow;
    font-size: 3em;
    padding: .5em;
    border-radius: 50px;
    color: #000;
    margin-top: 1em;
  }
if !started
  .cover
    .explain Du må løse en kode for å vite hva gaven er
    a(href="#", (click)=play()) Start!
if !this.solved && this.started
  kode-lock(
    code=code,
    user-input="",
    (solved)=this.solve()
  )
if this.solved && this.started
  kode-solved